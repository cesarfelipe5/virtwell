{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "module": "esnext", // ou 'commonjs'
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@color/*": ["color/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@redux/*": ["redux/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
